<% provide :title, @musical_instrument.name %>
<h1><em><%= @musical_instrument.name %></em></h1>
<br />
<br />

<div class="row">
  <% images = @musical_instrument.musical_instrument_images %>
  <div class="col-md-6">
    <div class="row carousel-holder">

      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% images.each_with_index do |image, index| %>
            <li data-target="#carousel-example-generic"
              data-slide-to="<%= index %>" <%= "class=active" if index == 0 %>></li>
          <% end %>
        </ol>

        <div class="carousel-inner">
          <% images.each do |image| %>
            <div class="item <%= "active" if image == images.first %>">
              <%= image_tag image.image, class: "slide-image" %>
            </div>
          <% end %>
        </div>

        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
    </div>
  </div>

  <div class="col-md-5 col-md-offset-1 gakki-show">
    <ul>
      <li><p><%= t "admin.musical_instrument.name" %>:
        <%= @musical_instrument.name %></p></li>
      <li><p><%= t "admin.musical_instrument.price" %>:
        <%= @musical_instrument.price %></p></li>
      <li><p><%= t "admin.musical_instrument.material" %>:
        <%= @musical_instrument.material %></p></li>
      <li><p><%= t "admin.musical_instrument.brand" %>:
        <%= @musical_instrument.brand %></p></li>
      <li><%= t "admin.musical_instrument.sellers" %>:
        <% @musical_instrument.musical_instrument_sellers.each do |seller| %>
          <p><%= seller.name %></p>
        <% end %></li>
    </ul>
  </div>
</div>

<div class="row-1">
  <h2><%= t "user.posts" %></h2>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <div class="col-2">
          <table class="col-2-table">
            <tr>
              <td rowspan="3">
                <%= link_to image_tag(post.image, style: "height: 275px;"), admin_post_path(post) %>
              </td>
              <td class="text"><%= t "user.post.post_name" %>: <%= link_to post.name, post %></td>
            </tr>
            <tr>
              <td class="text"><%= post.description %></td>
            </tr>
            <tr>
              <td class="text"><%= t "user.post.sound_quality" %>: 
                <%= t "user.post.sound_qualities.#{post.sound_quality}" %></td>
            </tr>
            <tr>
              <td>
                <% if post.average("quality") %>
                  <% avg_star = post.average("quality").avg.round %>
                  <% avg_star.times do %>
                    <span class="glyphicon glyphicon-star"></span>
                  <% end %>
                  <% (5 - avg_star).times do %>
                    <span class="glyphicon glyphicon-star-empty"></span>
                  <% end %>
                <% else %>
                  <% 5.times do %>
                    <span class="glyphicon glyphicon-star-empty"></span>
                  <% end %>
                <% end %>
              </td>
              <td class="text"><%= t "user.post.felling" %>: 
                <%= t "user.post.fellings.#{post.felling}" %></td>
            </tr>
          </table>
        </div> 
      </li>
    <% end %>
  </ul>
</div>
