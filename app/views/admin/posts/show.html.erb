<% provide :title, @post.name %>
<div class="single">
  <div class="container">
    <div class="single-info">   
      <div class="col-md-6 single-top wow fadeInLeft animated" data-wow-delay=".5s">

        <div class="row carousel-holder margin-top-50px">
          <% images = @post.musical_instrument.musical_instrument_images %>
          <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <% images.each_with_index do |image, index| %>
                <li data-target="#carousel-example-generic"
                  data-slide-to="<%= index %>" <%= "class=active" if index == 0 %>></li>
              <% end %>
            </ol>

            <div class="carousel-inner">
              <% images.each do |image| %>
                <div class="item <%= "active" if image == images.first %>">
                  <%= image_tag image.image, class: "slide-image" %>
                </div>
              <% end %>
            </div>

            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
          </div>
        </div>
      </div>

      <div class="col-md-6 single-top-left simpleCart_shelfItem wow fadeInRight animated" data-wow-delay=".5s">
        <h3><%= @post.name %></h3>

        <p><%= t "user.rated_instrument", rate: @post.musical_instrument_evaluate.evaluation %>/

          <a href="#"><%= t "user.add_review" %></a></p>
        <h6><%= t "admin.musical_instrument.price" %>: <%= @post.musical_instrument.price %>$</h6>

        <p><%= @post.description %></p>
        <p><%= @post.content.html_safe %></p>

        <div class="row">
          <div class="col-md-6"><%= t "user.post.felling" %>: 
            <%= link_to t("user.post.fellings.#{@post.felling}"), "#" %></div>
          <div class="col-md-6"><%= t "user.post.sound_quality" %>: 
            <%= link_to t("user.post.sound_qualities.#{@post.sound_quality}"), "#" %></div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <%= t "user.post.accessories" %>: <%= link_to @post.accessories, "#" %>
          </div>
        </div>

        <br/>
        <div class="row">
          <div class="col-md-4">
            <%= t "user.post_quality" %> <%= rating_for @post, "quality", disable_after_rate: false, enable_half: true %>
            <br>
          </div>

          <div class="col-md-8 create_by">
            <%= t "user.create_by" %>
            <%= link_to @post.user.name, "#" %>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag @post.user.profile.avatar, class: "avatar" %>
              </div>
              <div class="col-md-3">
                <%= "投稿数: " %><br /><%= @post.user.posts.count %>
              </div>
              <div class="col-md-7">
                <%= "過去のレビューの評価: " %><br />
                <% eval = user_post_evaluates(@post.user).round %>
                <% eval.times do %>
                  <span class="glyphicon glyphicon-star"></span>
                <% end %>
                <% (5 - eval).times do %>
                  <span class="glyphicon glyphicon-star-empty"></span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-sm-8 col-md-offset-2">
    <div class="panel panel-white post panel-shadow">
      <div class="post-footer">
        <div class="input-group form-comment">
          <% unless current_user.admin? %>
            <%= render "shared/comment_form" %>
          <% end %>
        </div>

        <ul class="comments-list">
          <li class="comment">
            <%= render @comments %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
