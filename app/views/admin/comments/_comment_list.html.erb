<div class="col-md-10" id="<%= comment.id %>">
  <li class="comment">
    <% user = comment.user %>
    <% if user.profile %>
      <%= image_tag user.profile.avatar, class: "avatar pull-left" %>
    <% else %>
      <%= image_tag "#" %>
    <% end %>
    <div class="comment-body">
      <div class="comment-heading">
        <h4 class="user"><%= user.name %></h4>
        <h5 class="time"><%= "#{time_ago_in_words(comment.created_at)} ago" %></h5>
      </div>
      <p><%= comment.content%></p>
    </div>
  </li> 
</div>
<br>
<br>
<div class="col-md-2">
  <h5 class="pull-right">
    <%= link_to admin_comment_path(comment), method: :delete, data: {confirm: t("admin.confirm_delete")},
      class: "danger" do %>
      <i class="glyphicon glyphicon-trash"></i>
    <% end %>
  </h5>
</div>
