<div class="col-md-3">
  <div class="w3-card-2 w3-round w3-white">
    <div class="w3-container">
      <br>
      <h4 class="text-center">My Profile</h4>
      <br>
      <p class="text-center">
        <% if @user.profile %>
          <%= image_tag @user.profile.avatar, style: "height:200px; width:200px" %>
        <% else %>
          <%= image_tag "", style: "height:200px; width:200px" %>
        <% end %>
      </p>
      <hr>
      <p><%= "Name: #{@user.name}"%></p>
      <p><%= "Email: #{@user.email}"%></p>
      <p><%= "Old: #{@user.profile.old}" if @user.profile %></p>
      <p><%= "Gender: #{@user.profile.gender}" if @user.profile %></p>
      <p><%= "contact: #{@user.profile.contact}" if @user.profile %></p>
    </div>
    <%= link_to "Edit profile", edit_user_registration_path if @user == current_user %>
  </div>
</div>
<div class="col-md-9">
  <div class="latest-posts">
    <h1 class="pull-left">
      <%= @user.name %>'s Posts
    </h1>
    <br>
    <br>
    <hr>
    <% @user.posts.each do |lp| %>
      <div class="col-md-4">
        <%= render "shared/post", post: lp %>
      </div>
    <% end %>
  </div>
</div>
