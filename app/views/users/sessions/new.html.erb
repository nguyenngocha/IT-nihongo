<h1><%= t "devise.login" %></h1>
<div class="col-md-6 col-md-offset-3">
  <%= form_for resource, as: resource_name,
    url: session_path(resource_name) do |f| %>
    <%= render "shared/error_messages", object: resource %>
    
    <div class="field form-group">
      <%= f.label :email, t("devise.email") %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, t("devise.password") %><br />
      <%= f.password_field :password,
        autocomplete: "off", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t("devise.remember_me") %>
      </div>
    <% end -%>

    <div class="actions center text-inline">
      <%= f.submit t("devise.login"), class: "btn btn-primary" %>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <% end %>
  
    <%= render "users/shared/links" %>
  </div>
</div>
